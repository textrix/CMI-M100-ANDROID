<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="me.autolock.m100.cmi.MainViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity">


        <TextView
            android:id="@+id/status_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="status"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/scan_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                android:enabled="@{viewModel.scanning ? false : true}"
                android:onClick="@{()->viewModel.scanButtonOnClick()}"
                android:text="@{viewModel.scanning ? `Scanning...` : `Scan`}" />

            <Button
                android:id="@+id/disconnect_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                android:enabled="@{viewModel.connected ? true : false}"
                android:onClick="@{()->viewModel.disconnectButtonOnClick()}"
                android:text="Disconnect" />
        </LinearLayout>

        <ScrollView

            android:layout_width="match_parent"
            android:layout_height="150dp">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/ble_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </ScrollView>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="▼ Read Report"
            android:textColor="@color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/reportText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="monospace"
                android:text="TextView"
                android:textSize="20sp" />

            <Button
                android:id="@+id/read_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:enabled="@{viewModel.connected ? true : false}"
                android:onClick="@{()->viewModel.readButtonOnClick()}"
                android:text="Read" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="▼ Relay OFF"
            android:textColor="@color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_off_0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                android:fontFamily="monospace"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:onClick="@{()->viewModel.relay_off(0)}"
                android:text="F0" />

            <Button
                android:id="@+id/btn_off_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                android:fontFamily="monospace"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:onClick="@{()->viewModel.relay_off(1)}"
                android:text="F1" />

            <Button
                android:id="@+id/btn_off_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                android:fontFamily="monospace"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:onClick="@{()->viewModel.relay_off(2)}"
                android:text="F2" />

            <Button
                android:id="@+id/btn_off_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                android:fontFamily="monospace"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:onClick="@{()->viewModel.relay_off(3)}"
                android:text="F3" />

            <Button
                android:id="@+id/btn_off_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                android:fontFamily="monospace"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:onClick="@{()->viewModel.relay_off(4)}"
                android:text="F4" />

            <Button
                android:id="@+id/btn_off_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                android:fontFamily="monospace"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:onClick="@{()->viewModel.relay_off(4)}"
                android:text="F5" />

            <Button
                android:id="@+id/btn_off_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                android:fontFamily="monospace"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:onClick="@{()->viewModel.relay_off(6)}"
                android:text="F6" />

            <Button
                android:id="@+id/btn_off_7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                android:fontFamily="monospace"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:onClick="@{()->viewModel.relay_off(7)}"
                android:text="F7" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="▼ Relay ON"
            android:textColor="@color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_on_0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                android:fontFamily="monospace"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:onClick="@{()->viewModel.relay_on(0)}"
                android:text="O0" />

            <Button
                android:id="@+id/btn_on_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                android:fontFamily="monospace"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:onClick="@{()->viewModel.relay_on(1)}"
                android:text="O1" />

            <Button
                android:id="@+id/btn_on_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                android:fontFamily="monospace"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:onClick="@{()->viewModel.relay_on(2)}"
                android:text="O2" />

            <Button
                android:id="@+id/btn_on_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                android:fontFamily="monospace"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:onClick="@{()->viewModel.relay_on(3)}"
                android:text="O3" />

            <Button
                android:id="@+id/btn_on_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                android:fontFamily="monospace"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:onClick="@{()->viewModel.relay_on(4)}"
                android:text="O4" />

            <Button
                android:id="@+id/btn_on_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                android:fontFamily="monospace"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:onClick="@{()->viewModel.relay_on(5)}"
                android:text="O5" />

            <Button
                android:id="@+id/btn_on_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                android:fontFamily="monospace"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:onClick="@{()->viewModel.relay_on(6)}"
                android:text="O6" />

            <Button
                android:id="@+id/btn_on_7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                android:fontFamily="monospace"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:onClick="@{()->viewModel.relay_on(7)}"
                android:text="O7" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="▼ Log" />

        <ScrollView
            android:id="@+id/log_scroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/log_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </ScrollView>

    </LinearLayout>
</layout>